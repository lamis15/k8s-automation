global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:{{ prometheus_port }}']

  - job_name: 'node_exporter'
    static_configs:
      - targets:
{% for host in groups['k8s_cluster'] %}
        - '{{ hostvars[host]['ansible_host'] }}:{{ node_exporter_port }}'
{% endfor %}
